<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_list">

    <fragment
        android:id="@+id/navigation_list"
        android:name="com.example.mazika.ui.songs.SongViewFragment"
        android:label="@string/title_songs"
        tools:layout="@layout/fragment_item_list" />

    <fragment
        android:id="@+id/navigation_settings"
        android:name="com.example.mazika.ui.settings.SettingsFragment"
        android:label="@string/title_settings"
        tools:layout="@layout/fragment_settings" />

        <fragment
            android:id="@+id/navigation_playlists"
            android:name="com.example.mazika.ui.playlists.PlaylistFragment"
            android:label="@string/title_playlist">

            <action
                android:id="@+id/action_to_details"
                app:destination="@id/playlist_details" />
        </fragment>

        <fragment
            android:id="@+id/playlist_details"
            android:name="com.example.mazika.ui.playlists.PlaylistDetailsFragment"
            android:label="Playlist details" />
</navigation>