<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_bg"
    android:padding="12dp"
    tools:context=".ui.home.HomeFragment">

    <TextView
        android:id="@+id/tvHeader"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Songs"
        android:textStyle="bold"
        android:textSize="22sp"
        android:textColor="@color/text_primary"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Search -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cardSearch"
        android:layout_width="0dp"
        android:layout_height="52dp"
        android:layout_marginTop="10dp"
        app:cardCornerRadius="16dp"
        app:cardElevation="0dp"
        app:strokeWidth="1dp"
        app:strokeColor="@color/divider_soft"
        app:cardBackgroundColor="@color/surface_card"
        app:layout_constraintTop_toBottomOf="@id/tvHeader"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingStart="14dp"
            android:paddingEnd="14dp">

            <ImageView
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:src="@android:drawable/ic_menu_search"
                app:tint="@color/text_secondary"/>

            <EditText
                android:id="@+id/etSearch"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="10dp"
                android:background="@android:color/transparent"
                android:hint="Search songs or artists"
                android:textColor="@color/text_primary"
                android:textColorHint="@color/text_secondary"
                android:imeOptions="actionDone"
                android:singleLine="true"/>
        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>

    <!-- Sort chips -->
    <com.google.android.material.chip.ChipGroup
        android:id="@+id/chipSortGroup"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        app:singleSelection="true"
        app:selectionRequired="true"
        app:layout_constraintTop_toBottomOf="@id/cardSearch"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <com.google.android.material.chip.Chip
            android:id="@+id/chipSortName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Name"
            android:checked="true"/>

        <com.google.android.material.chip.Chip
            android:id="@+id/chipSortArtist"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Artist"/>

        <com.google.android.material.chip.Chip
            android:id="@+id/chipSortDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Date added"/>
    </com.google.android.material.chip.ChipGroup>

    <!-- List -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvSongs"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:clipToPadding="false"
        android:paddingTop="6dp"
        android:paddingBottom="90dp"
        app:layout_constraintTop_toBottomOf="@id/chipSortGroup"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Loading -->
    <ProgressBar
        android:id="@+id/pbLoading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:indeterminate="true"
        app:layout_constraintTop_toTopOf="@id/rvSongs"
        app:layout_constraintBottom_toBottomOf="@id/rvSongs"
        app:layout_constraintStart_toStartOf="@id/rvSongs"
        app:layout_constraintEnd_toEndOf="@id/rvSongs"/>

    <!-- Empty / no results -->
    <TextView
        android:id="@+id/tvEmpty"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="No songs found"
        android:textColor="@color/text_secondary"
        android:textSize="14sp"
        android:gravity="center"
        android:visibility="gone"
        app:layout_constraintTop_toTopOf="@id/rvSongs"
        app:layout_constraintBottom_toBottomOf="@id/rvSongs"
        app:layout_constraintStart_toStartOf="@id/rvSongs"
        app:layout_constraintEnd_toEndOf="@id/rvSongs"/>

</androidx.constraintlayout.widget.ConstraintLayout>
