<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="18dp"
    android:background="@drawable/bg_player_gradient">

    <!-- Album Art -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cardArt"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintWidth_percent="0.88"
        app:cardCornerRadius="22dp"
        app:cardElevation="6dp"
        app:strokeWidth="1dp"
        app:strokeColor="#33FFFFFF">

        <ImageView
            android:id="@+id/ivBigArt"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@android:drawable/ic_media_play"
            android:contentDescription="Album art"/>
    </com.google.android.material.card.MaterialCardView>

    <!-- Title -->
    <TextView
        android:id="@+id/tvNowTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Song title"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="@android:color/white"
        android:maxLines="1"
        android:ellipsize="end"
        app:layout_constraintTop_toBottomOf="@id/cardArt"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp"/>

    <!-- Artist -->
    <TextView
        android:id="@+id/tvNowArtist"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Artist"
        android:textColor="#CCFFFFFF"
        android:maxLines="1"
        android:ellipsize="end"
        app:layout_constraintTop_toBottomOf="@id/tvNowTitle"
        app:layout_constraintStart_toStartOf="@id/tvNowTitle"
        app:layout_constraintEnd_toEndOf="@id/tvNowTitle"
        android:layout_marginTop="6dp"/>

    <!-- Seekbar -->
    <SeekBar
        android:id="@+id/seekBar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/tvNowArtist"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="18dp"
        android:progressTint="@android:color/white"
        android:thumbTint="@android:color/white"
        android:progressBackgroundTint="#55FFFFFF"/>

    <!-- Times -->
    <TextView
        android:id="@+id/tvCurrentTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0:00"
        android:textColor="#B3FFFFFF"
        app:layout_constraintTop_toBottomOf="@id/seekBar"
        app:layout_constraintStart_toStartOf="@id/seekBar"
        android:layout_marginTop="6dp"/>

    <TextView
        android:id="@+id/tvTotalTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0:00"
        android:textColor="#B3FFFFFF"
        app:layout_constraintTop_toBottomOf="@id/seekBar"
        app:layout_constraintEnd_toEndOf="@id/seekBar"
        android:layout_marginTop="6dp"/>

    <!-- Controls row -->
    <ImageButton
        android:id="@+id/btnPrev"
        android:layout_width="52dp"
        android:layout_height="52dp"
        android:background="@android:color/transparent"
        android:src="@android:drawable/ic_media_previous"
        android:tint="@android:color/white"
        android:contentDescription="Previous"
        app:layout_constraintTop_toBottomOf="@id/tvCurrentTime"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="22dp"/>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cardPlay"
        android:layout_width="78dp"
        android:layout_height="78dp"
        app:layout_constraintTop_toTopOf="@id/btnPrev"
        app:layout_constraintBottom_toBottomOf="@id/btnPrev"
        app:layout_constraintStart_toEndOf="@id/btnPrev"
        app:layout_constraintEnd_toStartOf="@id/btnNext"
        app:cardCornerRadius="39dp"
        app:cardElevation="10dp"
        app:cardBackgroundColor="#FFFFFFFF"
        android:layout_marginStart="18dp"
        android:layout_marginEnd="18dp">

        <ImageButton
            android:id="@+id/btnPlay"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@android:color/transparent"
            android:src="@android:drawable/ic_media_play"
            app:tint="#111111"
            android:contentDescription="Play/Pause"/>
    </com.google.android.material.card.MaterialCardView>

    <ImageButton
        android:id="@+id/btnNext"
        android:layout_width="52dp"
        android:layout_height="52dp"
        android:background="@android:color/transparent"
        android:src="@android:drawable/ic_media_next"
        app:tint="@android:color/white"
        android:contentDescription="Next"
        app:layout_constraintTop_toTopOf="@id/btnPrev"
        app:layout_constraintBottom_toBottomOf="@id/btnPrev"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>
